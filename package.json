{
  "name": "electron-playwright-mcp",
  "author": "friki",
  "version": "1.0.0",
  "description": "MCP Server for Electron Renderer automation",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "npm run build && playwright test",
    "test:smoke": "npm run build && playwright test smoke.test.ts",
    "test:watch": "npm run build && playwright test --ui",
    "test:client": "tsx test-client.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "@playwright/test": "^1.55.1",
    "playwright": "^1.55.1",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/node": "^22.18.6",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2"
  },
  "bin": {
    "electron-playwright-mcp": "./dist/index.js"
  }
}
